<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="colorButtonNormal">@drawable/btn_theme</item>
	</style>

	<style name="AppTheme.NoActionBar">
		<item name="windowActionBar">false</item>
	</style>

	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

	<style name="CancelTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="colorButtonNormal">@drawable/btn_cancel</item>
	</style>

	<!-- Button -->
	<style name="CustomButton">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">48dp</item>
		<item name="android:paddingRight">8dp</item>
		<item name="android:paddingLeft">8dp</item>
		<item name="android:textSize">@dimen/text_subheading</item>
		<item name="android:textColor">@color/text_white</item>
	</style>

	<style name="UploadButton">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">36dp</item>
		<item name="android:paddingRight">8dp</item>
		<item name="android:paddingLeft">8dp</item>
		<item name="android:textSize">@dimen/text_caption</item>
		<item name="android:textColor">@color/text_white</item>
	</style>

	<style name="CustomButtonRemove" parent="CustomButton">
		<item name="android:theme">@style/CancelTheme</item>
	</style>

	<!-- Field -->
	<style name="CustomFieldContainer">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:weightSum">1.0</item>
	</style>

	<!-- Edit Text -->
	<style name="CustomEditText">
		<item name="android:padding">@dimen/item_margin_normal</item>
		<item name="android:textSize">@dimen/text_body</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/text_dark</item>
	</style>

	<!-- Prefix Icon -->
	<style name="PrefixIcon">
		<item name="android:layout_width">@dimen/icon_list_small</item>
		<item name="android:layout_height">@dimen/icon_list_small</item>
	</style>

	<style name="CustomFieldIcon" parent="PrefixIcon">
		<item name="android:layout_marginRight">@dimen/item_margin_normal</item>
	</style>

	<!-- Text -->
	<style name="CaptionRegular">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/text_light_1</item>
		<item name="android:textSize">@dimen/text_caption</item>
	</style>

	<style name="CaptionMedium" parent="CaptionRegular">
		<item name="android:textStyle">bold</item>
	</style>

	<style name="ParentText">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/text_dark</item>
	</style>

	<style name="BodyRegular" parent="ParentText">
		<item name="android:textSize">@dimen/text_body</item>
	</style>

	<style name="BodyMedium" parent="BodyRegular">
		<item name="android:textStyle">bold</item>
	</style>

	<style name="SubheadingRegular" parent="ParentText">
		<item name="android:textSize">@dimen/text_subheading</item>
	</style>

	<style name="SubheadingMedium" parent="SubheadingRegular">
		<item name="android:textStyle">bold</item>
	</style>

	<style name="TitleRegular" parent="ParentText">
		<item name="android:textSize">@dimen/text_title</item>
	</style>

	<style name="TitleMedium" parent="TitleRegular">
		<item name="android:textStyle">bold</item>
	</style>

	<style name="ClickableRegular">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:clickable">true</item>
		<item name="android:background">@drawable/bg_clickable</item>
		<item name="android:padding">@dimen/item_margin_mini</item>
		<item name="android:textSize">@dimen/text_body</item>
		<item name="android:textColor">@color/colorAccent</item>
	</style>

	<style name="ClickableMedium" parent="ClickableRegular">
		<item name="android:textStyle">bold</item>
	</style>

	<!-- Navigation Drawer -->
	<style name="NavigationDrawerStyle" parent="Base.TextAppearance.AppCompat">
		<item name="android:textSize">@dimen/text_title</item>
		<item name="android:itemBackground">@drawable/bg_clickable</item>
	</style>

	<!-- Progress Bar -->
	<style name="ProgressBar">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_centerHorizontal">true</item>
		<item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
	</style>

	<style name="SeparatorLayout">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">@dimen/separator_height</item>
		<item name="android:background">@color/divider</item>
	</style>

	<style name="SectionOptions">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">@dimen/text_title</item>
		<item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
		<item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
		<item name="android:layout_centerVertical">true</item>
	</style>

	<!-- Floating Edit Text -->
	<style name="CustomEditTextLayout">
		<item name="android:textColorHint">@color/text_light_2</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:textSize">@dimen/text_body</item>
	</style>

	<style name="CustomErrorTextAppearance" parent="@android:style/TextAppearance">
		<item name="android:textColor">@color/ic_cancel</item>
		<item name="android:textSize">@dimen/text_body</item>
	</style>

	<!-- Floating Button -->
	<style name="CustomFloatingLabel" parent="@android:style/TextAppearance">
		<item name="android:textColor">@color/colorPrimary</item>
		<item name="android:textSize">@dimen/text_body</item>
	</style>
</resources>
